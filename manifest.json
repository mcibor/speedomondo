{
  "manifest_version": 2,
  "name": "Speedomondo",
  "description": "Calculate average speed in selected section of your workout in Endomondo.",
  "version": "0.1",
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Speedomondo"
  },
  "permissions": [
    "tabs",
    "debugger",
    "https://www.endomondo.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.endomondo.com/home",
        "https://www.endomondo.com/users/*/workouts/*"
      ],
      "js": [
        "config.js",
        "app.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "config.js",
      "background.js"
    ],
    "persistent": false
  }
}